<nav>
    <!-- use Mansheen's navbar to be consistent with homepage -->
</nav>
<div>
    <form class="d-flex px-5 pt-5 mb-5">
        <input class="form-control me-2 autocomplete" type="search" placeholder="Search" aria-label="Search" />
        <button class="btn btn-dark btn-lg" type="button" id="searchButton">
            Search
        </button>
    </form>
</div>
<div class="container-fluid ps-5">
    <div class="row align-items-start">

        {{> filters }}

        <!-- cards to display searched results and filtered results -->
        <div class="col col-10 ps-5 pe-5">
            <div class="row row-cols-4 g-4">
                {{!-- Used to dynamically render cloth item --}}
                {{#each items}}
                {{> clothItem imageUrl=imageUrl name=name price=price }}.
                {{/each}}
            </div>
        </div>
    </div>
</div>
<div class="position-fixed bottom-0 end-0 p-3 bg-lightgray rounded" id="prompt" style="width: 300px;" display="none">
    <div class="bg-lightgray text-dark p-2 rounded">
        Hey, it seems that you've stayed on this page for a long time. If you can't find interested items, come back and
        check regularly because we keep uploading new clothes for trade! &#128512;
    </div>
</div>

<style>
    #prompt {
        background-color: lightgray;
        display: none;
    }
</style>